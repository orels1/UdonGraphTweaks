.ugt__searchContainer {
    position: absolute;
    top: 30px;
    right: 10px;
    width: 300px;
    height: 30px;
    background-color: #191919;
    display: flex;
    flex-direction: row;
    align-items: center;
}

.ugt__searchField {
    display: flex;
    flex: 10;
    flex-direction: row;
    align-items: center;
}

.ugt__searchField TextInput#unity-text-input {
    border-radius: 0;
    border-width: 0;
    background-color: #191919;
    -unity-text-align: middle-left;
}

.ugt__searchClose {
    display: flex;
    flex: 1;
    width: 20px;
    height: 100%;
    -unity-text-align: middle-center;
    margin: 0;
    border-radius: 0;
    background-color: #515151;
    background-image: none;
    -unity-font-style: bold;
}

.ugt__resultCount {
    align-self: flex-end;
}
